<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
    <% if !current_user.friends.include?(user) && !current_user.pending_friends.include?(user) && !current_user.friend_requests.include?(user) && current_user != user %>
      <%= link_to 'Add as friend', user_friendships_path(current_user, :friendship => {:friend_id => user.id}), method: :post, class: 'profile-link' %>
    <% elsif !current_user.friends.include?(user) && (current_user.pending_friends.include?(user) || current_user.friend_requests.include?(user)) %>
      <p>'Waiting for confirmation.'</p>
    <% elsif current_user != user %>
      <p>'You are already friends.'</p>
    <% end %>
  </span>
</li>